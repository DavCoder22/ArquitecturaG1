                                 <!--Pagina principal -->
@using ArquitecturaG1.Models.DTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Idiomas por País</title>
    <link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center; /* Centrado vertical */
            flex-direction: column;
            min-height: 100vh; /* Altura mínima para tomar toda la ventana */
            margin: 0; /* Eliminar el margen predeterminado */
        }

        .chart-container {
            width: 80vw; /* O el ancho que prefieras */
            max-width: 600px; /* O el máximo ancho que prefieras */
        }
    </style>

</head>
<body>

    <div class="search-container">
        <input type="text" id="nombrePais" placeholder="Buscar país..." autocomplete="off">
        <button id="buscarPaisesBtn">Buscar</button>
    </div>

    <div class="table-container">
        <table id="tablaIdiomas">
            <thead>
                <tr>
                    <th>Idioma</th>
                    <th>Oficial</th>
                    <th>Porcentaje</th>
                </tr>
            </thead>
            <tbody>
                <!-- Los datos de los idiomas se llenarán aquí -->
            </tbody>
        </table>
    </div>

    <div class="chart-container" style="position: relative; height:40vh; width:80vw; margin-left: auto; margin-right: auto;">
        <canvas id="idiomasChart"></canvas>
    </div>

    <script src="~/js/functions.js"></script>

</body>
</html>
